{
  "designSystem": {
    "name": "Islamic App Design System",
    "version": "1.0",
    "theme": "modern_islamic",
    "description": "Design system for Islamic mobile applications with modern UI patterns and traditional aesthetic elements"
  },
  "colorPalette": {
    "primary": {
      "darkTeal": "#2D4A4A",
      "mediumTeal": "#3E5A5A", 
      "lightTeal": "#4A6B6B",
      "accent": "#5C7A7A"
    },
    "secondary": {
      "warmGold": "#D4A574",
      "brightGold": "#F5C842",
      "lightGold": "#FFD700"
    },
    "neutral": {
      "white": "#FFFFFF",
      "lightGray": "#F5F5F5",
      "mediumGray": "#CCCCCC",
      "darkGray": "#666666",
      "black": "#000000"
    },
    "functional": {
      "success": "#4CAF50",
      "warning": "#FF9800",
      "error": "#F44336",
      "info": "#2196F3"
    }
  },
  "typography": {
    "arabic": {
      "fontFamily": "Traditional Arabic",
      "weights": ["regular", "medium", "bold"],
      "sizes": {
        "display": "48px",
        "heading": "32px", 
        "subheading": "24px",
        "body": "18px",
        "caption": "14px"
      }
    },
    "latin": {
      "fontFamily": "Modern Sans-Serif",
      "weights": ["regular", "medium", "semibold", "bold"],
      "sizes": {
        "display": "32px",
        "heading": "24px",
        "subheading": "18px", 
        "body": "16px",
        "caption": "12px",
        "small": "10px"
      }
    }
  },
  "layoutStructure": {
    "containerTypes": {
      "fullscreen": {
        "padding": "0px",
        "backgroundColor": "primary.darkTeal"
      },
      "card": {
        "borderRadius": "16px",
        "padding": "20px",
        "backgroundColor": "neutral.white",
        "shadow": "0 4px 12px rgba(0,0,0,0.1)"
      },
      "section": {
        "borderRadius": "12px",
        "padding": "16px",
        "margin": "8px"
      }
    },
    "gridSystem": {
      "columns": 12,
      "gutters": "16px",
      "margins": "20px"
    }
  },
  "componentPatterns": {
    "header": {
      "structure": "greeting + notification_icon",
      "backgroundColor": "primary.darkTeal",
      "textColor": "neutral.white",
      "padding": "16px 20px",
      "elements": {
        "greeting": {
          "fontSize": "typography.latin.sizes.subheading",
          "fontWeight": "medium"
        },
        "notification": {
          "position": "top-right",
          "iconSize": "24px"
        }
      }
    },
    "statsCard": {
      "structure": "title + chart/counter + navigation",
      "backgroundColor": "neutral.white",
      "borderRadius": "16px",
      "padding": "20px",
      "shadow": "subtle",
      "elements": {
        "chart": {
          "type": "bar_chart",
          "height": "120px",
          "activeColor": "secondary.warmGold",
          "inactiveColor": "neutral.lightGray"
        },
        "ranking": {
          "position": "right",
          "backgroundColor": "secondary.warmGold",
          "textColor": "primary.darkTeal",
          "fontSize": "typography.latin.sizes.subheading",
          "fontWeight": "bold"
        }
      }
    },
    "quickActions": {
      "structure": "icon_grid",
      "layout": "3_columns",
      "spacing": "16px",
      "elements": {
        "actionItem": {
          "backgroundColor": "neutral.white",
          "borderRadius": "12px",
          "padding": "16px",
          "textAlign": "center",
          "iconSize": "32px",
          "fontSize": "typography.latin.sizes.body"
        }
      }
    },
    "timingsCard": {
      "structure": "location + times_grid",
      "backgroundColor": "primary.darkTeal",
      "textColor": "neutral.white",
      "borderRadius": "16px",
      "padding": "20px",
      "elements": {
        "locationHeader": {
          "fontSize": "typography.latin.sizes.subheading",
          "fontWeight": "bold",
          "marginBottom": "16px"
        },
        "timeGrid": {
          "layout": "5_columns",
          "spacing": "8px",
          "itemStyle": {
            "backgroundColor": "primary.mediumTeal",
            "borderRadius": "8px",
            "padding": "12px 8px",
            "textAlign": "center"
          }
        }
      }
    },
    "counter": {
      "structure": "arabic_text + timer + count_display + controls",
      "backgroundColor": "primary.darkTeal",
      "textColor": "neutral.white",
      "centerAligned": true,
      "elements": {
        "arabicText": {
          "fontSize": "typography.arabic.sizes.heading",
          "fontWeight": "medium",
          "marginBottom": "32px",
          "textAlign": "center"
        },
        "timer": {
          "fontSize": "typography.latin.sizes.body",
          "backgroundColor": "primary.mediumTeal",
          "borderRadius": "8px",
          "padding": "8px 16px",
          "marginBottom": "24px"
        },
        "countDisplay": {
          "fontSize": "typography.latin.sizes.display",
          "fontWeight": "bold",
          "color": "secondary.warmGold",
          "marginBottom": "40px"
        },
        "primaryButton": {
          "backgroundColor": "functional.info",
          "borderRadius": "12px",
          "width": "80px",
          "height": "80px",
          "marginBottom": "32px"
        },
        "controlButtons": {
          "layout": "horizontal_row",
          "spacing": "24px",
          "buttonStyle": {
            "backgroundColor": "primary.mediumTeal",
            "borderRadius": "8px",
            "padding": "12px",
            "iconSize": "24px"
          }
        }
      }
    },
    "navigation": {
      "structure": "bottom_tabs",
      "backgroundColor": "neutral.white",
      "height": "80px",
      "elements": {
        "activeTab": {
          "backgroundColor": "primary.darkTeal",
          "borderRadius": "24px",
          "iconColor": "neutral.white"
        },
        "inactiveTab": {
          "iconColor": "neutral.mediumGray"
        }
      }
    }
  },
  "designPrinciples": {
    "visual": {
      "contrast": "high_contrast_for_readability",
      "hierarchy": "clear_typography_scales",
      "whitespace": "generous_padding_and_margins",
      "consistency": "unified_border_radius_system"
    },
    "islamic_elements": {
      "patterns": {
        "geometric": "subtle_background_overlays",
        "implementation": "low_opacity_geometric_patterns",
        "placement": "behind_content_as_texture"
      },
      "typography": {
        "arabic": "traditional_readable_fonts",
        "latin": "modern_clean_sans_serif"
      },
      "cultural": {
        "colors": "earth_tones_with_gold_accents",
        "respect": "appropriate_religious_iconography"
      }
    },
    "usability": {
      "accessibility": "high_contrast_ratios",
      "touch_targets": "minimum_44px_touch_areas",
      "feedback": "clear_visual_states",
      "simplicity": "focused_single_purpose_screens"
    }
  },
  "responsiveBreakpoints": {
    "mobile": {
      "width": "375px",
      "padding": "16px",
      "fontSize": "base"
    },
    "tablet": {
      "width": "768px", 
      "padding": "24px",
      "fontSize": "scale_1.1x"
    }
  },
  "animations": {
    "transitions": {
      "duration": "300ms",
      "easing": "ease_out"
    },
    "interactions": {
      "button_press": "scale_0.95",
      "card_hover": "lift_shadow",
      "navigation": "slide_transition"
    }
  },
  "patterns": {
    "informationArchitecture": {
      "screenTypes": [
        "dashboard_overview",
        "focused_counter",
        "settings_list",
        "content_grid"
      ],
      "navigation": "bottom_tab_primary",
      "hierarchy": "card_based_content_organization"
    },
    "contentStrategy": {
      "multilingual": "arabic_primary_latin_secondary",
      "iconography": "simple_geometric_religious_appropriate",
      "imagery": "minimal_focused_functional"
    }
  },
  "implementationGuidelines": {
    "cardSystem": "Use consistent 16px border radius for all cards and containers",
    "colorUsage": "Dark teal as primary background, white cards for content, gold for emphasis and active states",
    "spacing": "16px base unit for padding, margins, and component spacing",
    "typography": "Maintain Arabic text prominence while ensuring Latin text readability",
    "patterns": "Apply Islamic geometric patterns subtly as background textures, not as primary visual elements",
    "interactions": "Ensure all touch targets meet 44px minimum size requirements"
  }
}