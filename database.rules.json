{
  "rules": {
    "globalCount": {
      ".read": true,
      ".write": "newData.isNumber() && newData.val() >= 0"
    },
    "lastUpdated": {
      ".read": true,
      ".write": true
    },
    "dailyCounts": {
      ".read": true,
      "$date": {
        ".write": "newData.isNumber() && newData.val() >= 0",
        ".validate": "newData.isNumber() && newData.val() >= 0"
      }
    },
    ".read": false,
    ".write": false
  }
}
