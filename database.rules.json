{
  "rules": {
    "globalCount": {
      ".read": true,
      ".write": "newData.isNumber() && newData.val() >= 0"
    },
    "lastUpdated": {
      ".read": true,
      ".write": true
    },
    "dailyCounts": {
      ".read": true,
      "$date": {
        ".write": "newData.isNumber() && newData.val() >= 0",
        ".validate": "newData.isNumber() && newData.val() >= 0"
      }
    },
    "pushTokens": {
      ".read": false,
      "$platform": {
        "$provider": {
          "$token": {
            ".write": "newData.child('token').isString() && newData.child('token').val().length > 0",
            ".validate": "newData.hasChildren(['token','provider','platform'])"
          }
        }
      }
    },
    ".read": false,
    ".write": false
  }
}
